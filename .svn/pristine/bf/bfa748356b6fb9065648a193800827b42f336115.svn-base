html{
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
}
body {
	font-size:SourceHanSansSC ;
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
	user-select: none;
}



a:focus {
	outline: thin dotted;
}

a:active,
a:hover {
	outline: 0;
}

button,
input,
select,
textarea {
	font-family: inherit;
	font-size: 100%;
	margin: 0;
}

button,
select {
	text-transform: none;
}

input:focus {
	outline: none;
}

textarea {
	overflow: auto;
	vertical-align: top;
}

table {
	border-collapse: collapse;
	border-spacing: 0;
}

ul {
	list-style: none;
	margin: 0;
	padding: 10px 30px 20px 30px;
}


#content {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.scale {
	position: relative;
	display: flex;
	justify-content: center;
	align-items: flex-start;
	/* width: 1764px;
	height: 820px; */
	width: 80%;
	height: 90%;
	background-color: rgba(255, 255, 255, 0.9);
	border-color: rgb(255, 255, 255);
	border-width: 1px;
	border-style: solid;
	border-radius: 5px;
	font-size: 16px;
	opacity: 1;
	padding: 30px 30px 30px 30px;
}



/**
 * 平板
 */
.content{
	position: relative;
	width: 100%;
	height: 100%;
}
.page-content {
	padding: 0 40px 0 40px;
	width: calc(100% - 80px);
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}

.page-content-title {
	padding-top: 10px;
	width: 100%;
	height:40px;
	/* background-color: #55aa7f; */
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
}

.page-content-title-center{
	padding-top: 10px;
	width: 100%;
	height:40px;
	/* background-color: #55aa7f; */
	display: flex;
	justify-content: center;
	align-items: flex-start;
}
.page-content-main {
	width: 100%;
	margin-bottom: 50px;
	height: calc(100% - 40px);
	border: 1px solid rgb(187, 187, 187);
	border-radius: 5px;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.title-red {
	font-size: 20px;
	color:rgb(214, 9, 9); ;
	font-weight: 400;
}

.title-blue {
	font-size: 20px;
	color: rgb(16, 112, 193);
	font-weight: 400;

}
.text-black {
	font-size: 20px;
	font-weight: 400;
	color: black;
}
.title-text-normal{
	font-size: 24px;
	color: black;
}
.title-text-green{
	font-size: 24px;
	color: rgb(84, 191, 73);
}
.title-text-red{
	font-size: 24px;
	color: rgb(187, 66, 66);
}
.title-box-center{
	padding-top: 5px;
	width: calc(100% - 40px);
	height: 40px;
	text-align: center;
	
}

.title-box-left{
	padding-top: 5px;
	width: calc(100% - 40px);
	height: 40px;
	text-align: left;
}

.title-box-right{
	padding-top: 5px;
	width: calc(100% - 40px);
	height: 40px;
	text-align: right;
}
.title-box-between{
	padding-top: 5px;
	width: calc(100% - 40px);
	height: 40px;
	display: flex;
	justify-content: space-between;
}

.mainMargin{
	width: 100%;
	height: 100%;
	padding: 5px 20px 5px 20px;
	display: flex;
	flex-direction: column;
}

.mainMargin-content{
	width: calc(100% - 40px);
	height: 100%;
	position: relative;
}
.flex-wrap{
	display: flex;
	justify-content: space-around;
	align-items: center;
	flex-wrap: wrap;
}
.stay-center{
	display: flex;
	justify-content: center;
	align-items: center;
}
.flex-colum-flexStart{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}
.flex-colum-space-around{
	display: flex;
	justify-content: space-around;
	align-items: center;
	flex-direction: column;
}
.flex-colum-space-evenly{
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	flex-direction: column;
}
